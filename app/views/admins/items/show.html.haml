.row.mt-4
  .col-md-6
    = item_img_tag(@item, :display)
  .col-md-6
    %h2.mt-2
      = @item.name
    - if @item.display?
      .t-2.badge.bg-primary
        公開中
    - else
      .t-2.badge.bg-secondary
        非公開
    .mt-2
      = price_with_tax(@item)
    .mt-2
      = @item.description

= link_to '編集', edit_admins_item_path(@item), class: 'btn btn-primary mt-3'

.item-footer
  = link_to '上へ', move_higher_admins_item_path(@item), data: { "turbo-method": :patch }
  = @item.position
  = link_to '下へ', move_lower_admins_item_path(@item), data: { "turbo-method": :patch }
