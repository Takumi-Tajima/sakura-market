= link_to '商品を追加', new_admins_item_path, class: 'btn btn-primary mb-3'

%table.table
  %thead
    %tr
      %th
        名前
      %th
        価格
      %th
        説明
      %td
      %td
      %td
  %tbody
    - @items.each do |item|
      %tr
        %td
          = item.name
        %td
          = price_with_tax(item)
        %td
          = item.description
        %td
          = link_to '詳細', admins_item_path(item)
        %td
          = link_to '↑', move_higher_admins_item_path(item), data: { "turbo-method": :patch }
        %td
          = link_to '↓', move_lower_admins_item_path(item), data: { "turbo-method": :patch }
