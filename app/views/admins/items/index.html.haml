= link_to '商品を追加', new_admins_item_path, class: 'btn btn-primary mb-3'

%table.table
  %thead
    %tr
      %th
        名前
      %th
        価格
      %th
        説明
      %td
  %tbody
    - @items.each do |item|
      %tr
        %td
          = item.name
        %td
          = number_to_currency(item.price_with_tax, unit: "¥", precision: 0)
        %td
          = item.description
        %td
          = link_to '編集', edit_admins_item_path(item)
